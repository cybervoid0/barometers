{
  "name": "barometers-realm",
  "version": "1.0.0",
  "author": {
    "name": "Cybervoid",
    "email": "mail@cybervoid.my",
    "url": "https://github.com/cybervoid0"
  },
  "license": "AGPL-3.0-only",
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack -p 3001",
    "dev:remote": "bun ./scripts/tunnel.ts next dev",
    "prisma": "dotenv -e .env.local prisma studio",
    "prisma:remote": "bun ./scripts/tunnel.ts prisma studio",
    "import-data": "bun ./scripts/import-data.ts",
    "build": "next build",
    "postinstall": "prisma generate",
    "analyze": "ANALYZE=true next build",
    "start": "next start -p $PORT",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "jest": "jest",
    "jest:watch": "jest --watch",
    "test": "bun run lint && bun run typecheck && bun run jest",
    "dump": "bun ./scripts/tunnel.ts bun ./scripts/db-backup.ts",
    "minio:dev": "docker-compose -f docker-compose.dev.yml --profile dev up -d",
    "minio:stop": "docker-compose -f docker-compose.dev.yml --profile dev down",
    "minio:backup:local": "mc mirror prod/barometers local/barometers-dev",
    "minio:backup:filesystem": "mc mirror prod/barometers ./backups/minio",
    "minio:backup:all": "mc mirror prod/barometers local/barometers-dev && mc mirror prod/barometers ./backups/minio",
    "prepare": "husky",
    "migrate:remote": "bun ./scripts/tunnel.ts npx prisma migrate deploy"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@hookform/resolvers": "^5.2.2",
    "@next/bundle-analyzer": "16.0.10",
    "@next/third-parties": "16.0.10",
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tanstack/react-table": "^8.21.3",
    "@types/pg": "^8.16.0",
    "bcrypt": "^6.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "dayjs": "^1.11.19",
    "dotenv": "^17.2.3",
    "embla-carousel-react": "^8.6.0",
    "fs-extra": "^11.3.2",
    "ioredis": "^5.8.2",
    "js-cookie": "^3.0.5",
    "lucide-react": "^0.561.0",
    "minio": "^8.0.6",
    "motion": "^12.23.26",
    "next": "16.0.10",
    "next-auth": "^4.24.13",
    "next-themes": "^0.4.6",
    "pg": "^8.16.3",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-hook-form": "^7.68.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "schema-dts": "^1.1.5",
    "server-only": "^0.0.1",
    "slugify": "^1.6.6",
    "sonner": "^2.0.7",
    "swiper": "^12.0.3",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "vanilla-cookieconsent": "^3.1.0",
    "zod": "^4.2.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "biome check --error-on-warnings",
      "biome check --write",
      "biome format --write",
      "jest --findRelatedTests --passWithNoTests"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@biomejs/biome": "^2.3.9",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcrypt": "^6.0.0",
    "@types/bun": "^1.3.4",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^30.0.0",
    "@types/js-cookie": "^3.0.6",
    "@types/lodash": "^4.17.21",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "babel-plugin-react-compiler": "^1.0.0",
    "dotenv-cli": "^11.0.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.7",
    "p-limit": "^7.2.0",
    "postcss": "^8.5.6",
    "prisma": "^7.1.0",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.18",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "engines": {
    "bun": ">=1.2.22"
  },
  "private": true,
  "overrides": {
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3"
  }
}
